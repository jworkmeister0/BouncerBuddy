<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="saving"
        android:title="@string/pref_saveData"
        android:summary="@string/pref_saveData_summ"
        android:defaultValue="true" 
        />
    
    <ListPreference
        android:key="mode"
        android:title="@string/pref_mode"
        android:dialogTitle="@string/pref_mode_summ"
        android:entries="@array/mode_titles"
        android:entryValues="@array/mode_values"
        android:defaultValue="@string/simple_default" />
    
    <ListPreference
        android:key="minAge"
        android:title="@string/pref_mode"
        android:dialogTitle="@string/pref_mode_summ"
        android:entries="@array/mode_titles"
        android:entryValues="@array/mode_values"
        android:defaultValue="@string/minAge_default" />
    
</PreferenceScreen>